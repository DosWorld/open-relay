    sub greater equal by uFFF21;
    sub greater hyphen by uFFF37;
    sub hyphen colon by uFFF4D;
    sub hyphen greater by uFFF28;
    sub hyphen hyphen by uFFF00;
    sub hyphen less by uFFF38;
    sub less asciitilde by uFFF43;
    sub less asterisk by uFFF47;
    sub less equal by uFFF20;
    sub less hyphen by uFFF25;
    sub parenleft asterisk by uFFF1A;
    sub plus colon by uFFF4B;
    sub plus plus by uFFF11;
    sub slash asciitilde by uFFF18;
